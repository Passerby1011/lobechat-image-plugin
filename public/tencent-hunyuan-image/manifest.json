{
  "schema_version": 1,
  "name": "tencent-hunyuan-image",
  "description": "腾讯混元大模型官方图片生成插件，提供高质量、极速的生图能力。",
  "auth": {
    "type": "none"
  },
  "api": [
    {
      "id": "generate",
      "name": "tencent-hunyuan-image",
      "description": "生成腾讯混元生图图片",
      "parameters": {
        "type": "object",
        "properties": {
          "Prompt": {
            "type": "string",
            "description": "对要生成的图像内容的描述。支持中英文。最多支持2000个字符。"
          },
          "NegativePrompt": {
            "type": "string",
            "description": "反向提示词，用于指定图像中不希望出现的内容。"
          },
          "Resolution": {
            "type": "string",
            "description": "图像分辨率比例。支持 '1024:1024' (1:1), '768:1024' (3:4), '1024:768' (4:3), '720:1280' (9:16), '1280:720' (16:9)。",
            "enum": ["1024:1024", "768:1024", "1024:768", "720:1280", "1280:720"],
            "default": "1024:1024"
          },
          "Seed": {
            "type": "integer",
            "description": "随机种子，用于控制生成图像的多样性。范围为 0-2147483647。"
          },
          "LogoAdd": {
            "type": "string",
            "description": "是否添加 Logo。'0'：不添加；'1'：添加。默认 '0'。",
            "enum": ["0", "1"],
            "default": "0"
          }
        },
        "required": ["Prompt"]
      }
    }
  ],
  "settings": {
    "type": "object",
    "properties": {
      "TENCENT_SECRET_ID": {
        "type": "string",
        "description": "腾讯云 API Secret ID",
        "format": "password"
      },
      "TENCENT_SECRET_KEY": {
        "type": "string",
        "description": "腾讯云 API Secret Key",
        "format": "password"
      }
    },
    "required": ["TENCENT_SECRET_ID", "TENCENT_SECRET_KEY"]
  }
}
